@model Cshap_Mvc.Models.BlogModel

<div class="card">
    <div class="card-header">
        <h2>Search Blogs</h2>
    </div>
    <div class="card-body row">
        @using (Html.BeginForm("SearchByTitle", "Home", FormMethod.Post, new { @class = "needs-validation row", novalidate = "" }))
        {
            <div class="col-md-2">
                <label for="Title" class="col-form-label">Tiêu đề</label>
            </div>
            <div class="col-md-10 ">
                @Html.TextBoxFor(m=>Model.Title, new { @class = "form-control", placeholder = "Tiêu đề" })
            </div>
            <div class="text-center mt-2 ">
                <button class="btn btn-outline-success" type="submit"> Search</button>
            </div>
        }
    </div>
</div>

